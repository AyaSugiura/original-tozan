
<div class="gallery">
  <h1>山おじさんの写真館</h1>
  
  <% if manager_logged_in? %>
  <div class="text-center"><%= link_to "写真を追加", new_gallery_path, class: "btn btn-primary" %></div>
  <% end %>
  
  <p>クリックして拡大してね</p>
  <div class="gallery-images">
    <% @galleries.each do |gallery| %>
      <div class="gallery-image">
        <%= link_to gallery_path(gallery) do %>
          <%= image_tag gallery.image.url %>
        <% end %>
        <p><%= gallery.name %></p>
      </div>
    <% end %>
  </div>
</div>





